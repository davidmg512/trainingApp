<UserControl
    x:Class="trainingApp.ExerciseCard"
    xmlns="http://schemas.microsoft.com/winfx/2006/xaml/presentation"
    xmlns:x="http://schemas.microsoft.com/winfx/2006/xaml"
    xmlns:local="using:trainingApp"
    xmlns:d="http://schemas.microsoft.com/expression/blend/2008"
    xmlns:mc="http://schemas.openxmlformats.org/markup-compatibility/2006"
    mc:Ignorable="d"
    d:DesignHeight="300"
    d:DesignWidth="400">

    <Grid Background="White" Padding="10" Margin="5">
        <StackPanel>
            <TextBox x:ConnectionId='2' Header="Nombre del Ejercicio" x:Name="ExerciseName" />
            <TextBox x:ConnectionId='3' Header="Descripción" x:Name="Description" TextWrapping="Wrap" />
            <TextBox x:ConnectionId='4' Header="Repeticiones" x:Name="Repetitions" />
            <TextBox x:ConnectionId='5' Header="Series" x:Name="Sets" />
        </StackPanel>
    </Grid>
</UserControl>

